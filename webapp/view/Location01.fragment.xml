<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog
    id="selectDialog03"
    title="Select Items"
    draggable="true"
    resizable="true"
    afterClose="onDialogAfterClose03"
  >
    <VBox>
      <SearchField
        id="searchField03"
        liveChange="onSearch03"
        placeholder="Search..."
      />
      <List
        id="itemList03"
        mode="MultiSelect"  
        growing="true"
        items="{/ZEHS_I_LOC_REF}"
        selectionChange="onSelectionChange03"
      >
        <StandardListItem
          title="{text}"
        />
      </List>
    </VBox>

    <buttons>
      <Button text="Cancel" press="onCancel03" />
      <Button text="OK" press="onConfirm03" />
    </buttons>
  </Dialog>
</core:FragmentDefinition>
