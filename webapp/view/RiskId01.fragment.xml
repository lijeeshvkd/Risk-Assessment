<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog
    id="selectDialog01"
    title="Select Items"
    draggable="true"
    resizable="true"
    afterClose="onDialogAfterClose01" >
    <VBox>
      <CheckBox text="Select All" select="onRiskSelectAll" />
      <SearchField id="searchField01"
        liveChange="onSearch01"
        placeholder="Search..." />
      <List id="itemList01"
        mode="MultiSelect"  
        growing="true"
        items="{
          path: '/ZEHS_I_RISK_ID',
          filters: [
            { path: 'type', operator: 'EQ', value1: 'Safety' }
          ]
        }"
        selectionChange="onSelectionChange01"
        rememberSelections="true" >
        <StandardListItem title="{id}" description="{title}" />
      </List>
    </VBox>

    <buttons>
      <Button text="Cancel" press="onCancel01" />
      <Button text="OK" press="onConfirm01" />
    </buttons>
  </Dialog>
</core:FragmentDefinition>
